<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/card_cardimage"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                android:visibility="gone"
                tools:src="@drawable/common_google_signin_btn_icon_light" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_Headers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0d47a1"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="EventHeader" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/card_cardeventimage"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="16dp"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/card_text_topic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/cardview_light_background"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-light"
                            android:maxLines="7"
                            android:paddingBottom="4dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="8dp"
                            android:paddingTop="24dp"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            tools:text="Topic:- Information Security" />
                        <TextView
                            android:id="@+id/card_text_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/cardview_light_background"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-light"
                            android:maxLines="7"
                            android:paddingBottom="4dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="8dp"
                            android:paddingTop="0dp"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            tools:text="Date:- 21 October 2018" />
                        <TextView
                            android:id="@+id/card_text_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/cardview_light_background"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-light"
                            android:maxLines="7"
                            android:paddingBottom="4dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="8dp"
                            android:paddingTop="0dp"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            tools:text="Time:- 16:00 hrs" />
                        <TextView
                            android:id="@+id/card_text_venue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/cardview_light_background"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-light"
                            android:maxLines="7"
                            android:paddingBottom="4dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="8dp"
                            android:paddingTop="0dp"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            tools:text="Venue:- Senate Hall" />
                        <TextView
                            android:id="@+id/card_text_intro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/cardview_light_background"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-light"
                            android:maxLines="7"
                            android:paddingBottom="16dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="8dp"
                            android:paddingTop="0dp"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            tools:text="Designation:- Prof,Dept. Computer Science,IIT Bombay" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>